<!DOCTYPE html>
<html>
<head>
  <title>Welcome aboard</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <link rel="stylesheet" href="http://code.jquery.com/mobile/1.2.0/jquery.mobile.structure-1.2.0.css" />
  <%= javascript_include_tag "http://js.pusher.com/1.12/pusher.min.js" %>
	<%= javascript_include_tag "http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.js" %>
	
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1"> 
  <%= render 'layouts/shim' %>
</head>

<body>
<!-- 	<%= render 'layouts/header' %>
 -->
	<div class="container">

		<% flash.each do |key, value| %>
			<!-- <div class="alert alert-<%= key %>"><%= value %></div> -->
			<%= content_tag(:div, value, class: "alert alert-#{key}") %>
		<% end %>

		<%= yield %>
<!-- 		
		<%= render 'layouts/footer' %> -->
		<%= debug(params) if Rails.env.development? %>
	</div>

</body>
</html>
